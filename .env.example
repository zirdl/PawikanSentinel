# Detection Configuration
CONFIDENCE_THRESHOLD=0.8
FRAME_SKIP=10
RESIZE_WIDTH=320
RESIZE_HEIGHT=240
CPU_THRESHOLD=80

# Directories
DETECTIONS_DIR=detections
