# Semaphore SMS Configuration (replaces Twilio)
SEMAPHORE_API_KEY=your_semaphore_api_key_here
SEMAPHORE_SENDER_NAME=PawikanSentinel

# For backward compatibility - will be ignored when using Semaphore
# TWILIO_ACCOUNT_SID=ignored_when_using_semaphore
# TWILIO_AUTH_TOKEN=ignored_when_using_semaphore
# TWILIO_PHONE_NUMBER=ignored_when_using_semaphore

# SMS Notification Cooldown (in minutes)
SMS_NOTIFICATION_COOLDOWN=10

# Roboflow Configuration
ROBOFLOW_API_KEY=your_roboflow_api_key
ROBOFLOW_API_URL=http://localhost:9001
