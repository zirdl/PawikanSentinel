# Security keys
SECRET_KEY=your-secret-key-here
SESSION_SECRET_KEY=your-session-secret-here
CSRF_SECRET_KEY=your-csrf-secret-here

# Database path (for shared database access)
DATABASE_PATH=/home/pi/pawikan-sentinel/pawikan.db

# Directory paths
DETECTIONS_DIR=/home/pi/pawikan-sentinel/detections

# Roboflow configuration
ROBOFLOW_API_KEY=your-roboflow-api-key-here
ROBOFLOW_API_URL=http://localhost:9001
ROBOFLOW_MODEL_ID=pawikansentinel-era7l/2

# Twilio configuration for SMS notifications
TWILIO_ACCOUNT_SID=your-twilio-account-sid-here
TWILIO_AUTH_TOKEN=your-twilio-auth-token-here
TWILIO_PHONE_NUMBER=your-twilio-phone-number-here

# Logging
LOG_LEVEL=INFO

# Pi-specific optimizations
MAX_INFERENCE_WORKERS=2
FRAME_SKIP=10
RESIZE_WIDTH=320
RESIZE_HEIGHT=240
CPU_THRESHOLD=80